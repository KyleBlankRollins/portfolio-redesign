@tailwind base;
@tailwind components;
@tailwind utilities;
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Mono|IBM+Plex+Sans|Oswald|Playfair+Display|Montserrat&display=swap');

html {
  background-color: #f7f4f2;
}

h1, h2, h3, h4 {
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  color: #201923;
}

h2 {
  font-size: 1.5rem;
  font-weight: 700;
}

h3 {
  font-size: 1.25rem;
  font-weight: 700;
}

.markdown-body p {
  margin-bottom: 1.25rem;
}

.markdown-body a, .markdown-body a:visited {
  font-weight: 700;
  color: #CC414F;
}

.markdown-body a:hover {
  color: #082736;
}

.gradient-bar {
  background: rgb(204,65,79);
  background: linear-gradient(90deg, rgba(204,65,79,1) 2%, rgba(151,105,122,1) 30%, rgba(98,144,164,1) 70%, rgba(8,39,54,1) 98%); 
}

.gradient-bar-bg {
  background: rgb(204,65,79);
  background: linear-gradient(90deg, rgba(204,65,79,0.2) 2%, rgba(151,105,122,0.2) 30%, rgba(98,144,164,0.2) 70%, rgba(8,39,54,0.2) 98%); 
}

.samples:nth-child(odd) {
  background-color: #756265;
}

.samples:nth-child(even) {
  background-color: #6290a4;
}

.tag {
  margin: 0 !important;  
}