@tailwind base;
@tailwind components;
@tailwind utilities;
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Mono|IBM+Plex+Sans|Oswald|Playfair+Display|Montserrat&display=swap');

html {
  background-color: #f7f4f2;
}

h1, h2, h3, h4 {
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  color: #201923;
}

h2 {
  font-size: 1.5rem;
  font-weight: 700;
}

h3 {
  font-size: 1.25rem;
  font-weight: 700;
}

.markdown-body p {
  margin-bottom: 1.25rem;
}

.markdown-body a, .markdown-body a:visited {
  font-weight: 700;
  color: #CC414F;
}

footer {
  background: rgb(204,65,79);
  background: linear-gradient(90deg, rgba(204,65,79,1) 10%, rgba(41,76,93,1) 90%);
}